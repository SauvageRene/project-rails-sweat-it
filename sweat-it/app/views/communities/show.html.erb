<%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-primary float-right" %>

<h1><%= @community.name %></h1><br>

<small>
<%= simple_format @community.bio %>
</small> 
<br>
<% @posts.each do |post| %>
    <h5><%= link_to post.title, community_post_path(@community, post) %></h5>
    <p><%= truncate post.body, length: 200 %></p>
<% end %>