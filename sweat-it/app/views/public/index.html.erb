<div class="container">
  <% unless user_signed_in? %>
  <div class="row">
    <div class="col">
    <!-- Trending Posts Start here -->
    <p class ="h5"> Trending </p>
    </div>
</div>
    <div class="row">
      <div class="col-sm-3">
      Trending 1
      </div>
      <div class="col-sm-3">
      Trending 2
      </div>
      <div class="col-sm-3">
      Trending 3
      </div>
    </div>
    <% end %>


    <!-- Popular-Posts-Start-Here --> 
    <div class="row mt-4">
      <div class="col">
      <p class="h5">Popular Posts</p>
      </div>
    </div>
  <div class="row">
    <div class="col-8">
    <% @posts.each do |post| %>
      <div class="card p-3">
      <h5><strong><%= link_to post.title, community_post_path(post.community_id, post) %></strong></h5> <!--passing in the community ID to avoid having to load from the DB.-->
      <p><%= truncate post.body, length: 200 %></p>
      </div>
  <% end %>
  </div>
    <div class="col-4">
    <p class="h5"> Newest Communities</p>
    <div class="card" style="width: 18rem;">
    <ul class="list-group">
    <% @communities.each do |community| %>
        <strong><li class="list-group-item"><%= link_to community.name, community_path(community) %></li></strong>
        <% end %>
</ul>
</div>
    </div>
  </div>
</div>