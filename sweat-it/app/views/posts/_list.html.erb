<% posts.each do |post| %>
    <div class="card p-3">
    <p><%= link_to post.community.name, community_path(post.community_id) %> Posted by <%= post.user.full_name %> <%= time_ago_in_words post.created_at %> ago.</p>
    <h5><strong><%= link_to post.title, community_post_path(post.community_id, post) %></strong></h5> <!--passing in the community ID to avoid having to load from the DB.-->
    <p><%= truncate post.body, length: 200 %></p>
    </div>
<% end %>